{
  "name": "ravendel",
  "version": "1.0.0",
  "description": "An eCommerce Fortress",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "start": "nodemon server.js",
    "server": "export NODE_ENV=production && export PORT=80 && node server &",
    "client": "npm start --prefix client",
    "frontend": "npm start --prefix frontend",
    "dev": "concurrently \"npm start\" \"npm run client\"",
    "localbuild": "npm install && npm install --prefix client && npm install --prefix frontend && npm run build --prefix client && npm run build --prefix frontend && npm run server",
    "postbuild": "npm install && NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm install --prefix frontend && npm run build --prefix client && npm run build --prefix frontend",
    "heroku-postbuild": "npm install && cd client && npm install && npm run build && cd .. && cd frontend && npm install && npm run build"
  },
  "engines": {
    "node": ">=14 <15"
  },
  "author": "Husain Bandookwala",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.10.1",
    "aws-sdk": "^2.1358.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "easygraphql-format-error": "0.0.3",
    "express": "^4.17.1",
    "formidable": "^1.2.1",
    "fs": "0.0.1-security",
    "googleapis": "^114.0.0",
    "graphql": "^14.7.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-upload": "^12.0.0",
    "http-status": "^1.5.0",
    "jimp": "^0.16.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongoose": "^6.2.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.2",
    "paypal-rest-sdk": "^1.8.1",
    "razorpay": "^2.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-drag-reorder": "^1.2.0",
    "react-hook-form": "^7.43.9",
    "react-html-parser": "^2.0.2",
    "react-phone-input-2": "^2.15.1",
    "sanitize-html": "^2.4.0",
    "sharp": "^0.28.3",
    "slugify": "^1.3.6",
    "stripe": "^9.16.0",
    "validator": "^13.9.0"
  }
}
