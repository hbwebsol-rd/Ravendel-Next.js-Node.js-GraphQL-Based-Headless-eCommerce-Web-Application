{
  "name": "ravendel",
  "version": "1.0.0",
  "description": "An eCommerce Fortress",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "start": "nodemon server.js",
    "server": "export NODE_ENV=production && export PORT=80 && node server &",
    "client": "npm start --prefix client",
    "frontend": "npm start --prefix frontend",
    "dev": "concurrently \"npm start\" \"npm run client\"",
    "localbuild": "npm install && npm install --prefix client && npm install --prefix frontend && npm run build --prefix client && npm run build --prefix frontend && npm run server",
    "postbuild": "npm install && NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm install --prefix frontend && npm run build --prefix client && npm run build --prefix frontend",
    "heroku-postbuild": "npm install && cd client && npm install && npm run build && cd .. && cd frontend && npm install && npm run build"
  },
  "engines": {
    "node": ">=14 <15"
  },
  "author": "Husain Bandookwala",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "aws-sdk": "^2.1358.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "easygraphql-format-error": "^0.0.3",
    "express": "^4.18.2",
    "formidable": "^3.5.1",
    "fs": "0.0.1-security",
    "google-auth-library": "^9.14.1",
    "graphql": "^16.8.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-upload": "^13.0.0",
    "http-status": "^1.5.0",
    "jimp": "^0.16.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongoose": "^8.1.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.2",
    "onesignal-node": "^3.4.0",
    "paypal-rest-sdk": "^1.8.1",
    "razorpay": "^2.9.2",
    "sanitize-html": "^2.4.0",
    "sharp": "^0.28.3",
    "slugify": "^1.3.6",
    "stripe": "^9.16.0",
    "validator": "^13.9.0"
  }
}
